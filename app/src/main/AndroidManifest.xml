<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.bonte_android">

    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:name="com.example.android.bonte_android.Firebase"
        android:allowBackup="true"
        android:icon="@mipmap/bonte_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/bonte_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".sky.SkyActivity"/>
        <activity android:name=".onboarding.OnboardingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>