<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/menuButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/button_menu"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/skyZoomLayout"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.98" />

        <ImageView
            android:id="@+id/screenshotButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/button_menu"
            android:elevation="2dp"
            app:layout_constraintBottom_toTopOf="@id/menuButton"
            app:layout_constraintEnd_toEndOf="@+id/skyZoomLayout"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.98" />


        <ImageView
            android:id="@+id/logoutButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/button_menu"
            android:elevation="2dp"
            app:layout_constraintBottom_toTopOf="@id/screenshotButton"
            app:layout_constraintEnd_toEndOf="@+id/skyZoomLayout"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.98" />

        <ImageView
            android:id="@+id/screenshotIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/share_sky"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/screenshotButton"
            app:layout_constraintEnd_toEndOf="@id/screenshotButton"
            app:layout_constraintStart_toStartOf="@+id/screenshotButton"
            app:layout_constraintTop_toTopOf="@+id/screenshotButton"
            app:layout_constraintVertical_bias="0.48" />


        <com.otaliastudios.zoom.ZoomLayout
            android:id="@+id/skyZoomLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:hasClickableChildren="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:maxZoom="5.0"
            app:minZoom="1.0">

            <FrameLayout
                android:id="@+id/sky"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/actionText"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:visibility="invisible"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/starDoAgainText"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="6sp"
                    android:visibility="invisible"
                    android:fontFamily="@font/montserrat_medium" />

                <TextView
                    android:id="@+id/takeYourTimeText"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="6sp"
                    android:visibility="invisible"
                    android:fontFamily="@font/montserrat_medium" />

            </FrameLayout>

        </com.otaliastudios.zoom.ZoomLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>